# Environment variables for docker-compose
# Copy to .env in the project root and set your real bot token

# Bot token passed into container(s)
BOT_TOKEN=your_max_bot_token_here

# Optional: override server port exposed inside the container
PORT=5000

# PostgreSQL (used by docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=maxchatbot
